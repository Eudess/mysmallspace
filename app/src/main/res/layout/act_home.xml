<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.jadieleudes.mysmallspace.gui.ActHome">

    <ImageView
        android:id="@+id/plantabaixa"
        android:layout_width="365dp"
        android:layout_height="319dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantabaixa" />

    <Button
        android:id="@+id/btnPlanta"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorBtnBlue"
        android:onClick="baixarPlanta"
        android:text="@string/btn_downPlanta"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plantabaixa"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/plantabaixa"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/plantabaixa" />

    <Button
        android:id="@+id/btnMateriais"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorBtnBlue"
        android:onClick="listarMateriais"
        android:text="@string/btn_listMaterial"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPlanta"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnPlanta"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnPlanta"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnComodos"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorBtnBlue"
        android:onClick="pinturaComodos"
        android:text="@string/btn_pintComodos"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMateriais"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnMateriais"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnMateriais"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnDimensInterno"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorBtnBlue"
        android:onClick="dimensInterno"
        android:text="@string/btn_dimensInterno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnComodos"
        app:layout_constraintRight_toRightOf="@+id/btnComodos"
        app:layout_constraintTop_toBottomOf="@+id/btnComodos"
        app:layout_constraintVertical_bias="0.037" />

</android.support.constraint.ConstraintLayout>